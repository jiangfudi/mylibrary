<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/adapter_gift_header_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_pull_logo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_gift_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wangzherongyao"/>

        <TextView
            android:id="@+id/adapter_gift_remain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wangzherongyao"/>

        <TextView
            android:id="@+id/adapter_gift_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wangzherongyao"/>
    </LinearLayout>

    <Button
        android:id="@+id/adapter_gift_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="免费领取"/>

</LinearLayout>